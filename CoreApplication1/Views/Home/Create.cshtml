@model EmployeeCreateViewModel

@{
    ViewBag.Title = "Add";
}

<div class="container">
<form enctype="multipart/form-data" asp-controller="Home" asp-action="Create" method="Post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="" style="width:25%" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="" style="width:25%" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class=form-group row>
        <label asp-for="Department" class="col-sm-2 col-form-label">Department</label>
        <div class="col-sm-10">
            <select asp-for="Department" style="width:45%" class="form-control" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Dept>()">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>
    </div>

        <div class="form-group row">
            <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="custom-file">
                <input asp-for="Photo" class="form-control custom-file-input" style="width:50%" />
                <label class="custom-file-label">...</label>
                </div>
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
          <br />
          <button type="submit" class="btn btn-primary">Submit</button>
    </div>

  
    @section Scripts {
        <script>
            $(function(){
                $('.custom-file-input').on("change", function(){
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
       </script>
    }
</form>
</div>
















